<%- include('header') -%>
<div class="image">
<div  class="text-center center-div" id="login">
    <div class="container w-25 border py-4 " id="loginn">
        <div class="title pb-5">  
            <h2 class="font-weight-bold py-2" >Login-Form</h2>
            <p class="form-sub-title">Login for the existing users</p>
            <br>
            <%if(locals.logout){
                %>
                <div class="alert-success text-center">
                    <%=logout%>
                </div>
                <% }%>
            </div>
            <form action="/login" method="POST" class="pt-8" onsubmit=" validateForm()">
                <div class="form-group">
                    <input type="text" class="form-control" id="name" placeholder="username" name="username">
                </div>
            <div class="form-group my-4">
                <input type="password" class="form-control" id="password" name="password" placeholder="password">
            </div>
            <button type="submit" class="btn btn-success rounded-pill text-dark" id="button">Submit</button>
        </form>
    </div>
</div>
</div>
<script>
    function validateForm() {       
    const name = document.getElementById("name").value;
    const password = document.getElementById("password").value;

    if(name.length==0){
        alert('Name must be filled out')
        return false;
    }
    if (name.length < 3) {
        alert('Name should be at least 3 charachters')
        return false;
    }
    if (password.length === 0) {
        alert('Password field should be filled')
        return false;
    }
  
}
</script>
